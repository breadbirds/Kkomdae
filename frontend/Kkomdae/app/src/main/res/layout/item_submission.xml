<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:background="@drawable/submission_border_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_model_number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_laptap_small"/>
    <TextView
        android:id="@+id/tv_model_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NT761XDA-X07/C(11세대)"
        style="@style/Title1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_icon"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Body2"
        app:layout_constraintStart_toStartOf="@id/tv_model_number"
        app:layout_constraintTop_toBottomOf="@id/tv_model_number"
        android:text="대여일자 : "
        />

    <TextView
        android:id="@+id/tv_date_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.01.03"
        style="@style/Body2"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_date"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down"
        app:layout_constraintTop_toTopOf="@id/iv_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/bt_file_download"
       style="@style/Label3"
        android:textColor="#474B52"

        android:background="@drawable/border_gray_rounded"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_return_download"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:text="대여 파일 다운로드"/>

    <TextView
        android:id="@+id/bt_return_download"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:background="@drawable/border_orange_rounded"
        android:text="반납하기"
        android:textColor="#E4614F"
        style="@style/Label3"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bt_file_download"
       app:layout_constraintTop_toTopOf="@id/bt_file_download" />





</androidx.constraintlayout.widget.ConstraintLayout>