    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/blue500"
            />

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_position"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/cv_image"
        app:layout_constraintBottom_toTopOf="@id/cv_info_box"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_buttons_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="사전에 반영되지 않은 추가적인 노트북 결함을 적어주세요."
            android:textColor="@color/gray500"
            style="@style/Title3"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/btn_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_retake"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/blue300"
            android:text="재촬영"
            style="@style/Title1"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/gray100"
            android:text="확인"
            android:textColor="@color/gray700"
            style="@style/Title1"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>